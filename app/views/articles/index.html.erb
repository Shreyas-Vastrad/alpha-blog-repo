<h1><b>Listing Article Details</b></h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
            <% @articles.each do |article| %>
                <tr>
                    <td><%=article.title%></td>
                    <td><%=article.description%></td>
                    <td>action to be performed</td>
                </tr>
            <% end %>   
    </tbody>
</table>
    
